{
  "$schema": "https://v2.tauri.app/schemas/tauri.config.json",
  "productName": "Synapse",
  "version": "0.1.0",
  "identifier": "com.synapse.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Synapse - AI Study Assistant",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
